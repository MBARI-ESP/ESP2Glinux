IFNAME=eth0
AUTOSTART=yes
BOOTPROTO="dhcp-b -m600 -s /usr/share/udhcpc/default.script"   #in background
DHCPNAME=`cat /etc/HOSTNAME`

IPADDR=192.168.8.20    #use this configuration if dhcp fails

hosts() {    #add lines before EOS
  cat <<EOS 
$(netIfIP $IFNAME $DHCPNAME-$IFNAME)
EOS
}

#shore stations route traffic via proxy arps for their clients
ifPost() {
  echo 1 > /proc/sys/net/ipv4/ip_nonlocal_bind
  echo 1 > /proc/sys/net/ipv4/ip_forward &&
  echo 1 > /proc/sys/net/ipv4/conf/$IFNAME/proxy_arp &&
  echo "Started proxy_arp and IP forwarding"
}
