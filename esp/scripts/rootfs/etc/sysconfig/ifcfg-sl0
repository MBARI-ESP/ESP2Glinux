IFNAME=sl0
AUTOSTART=no
BOOTPROTO=none

SLIPADDR=192.168.8.28   #assign each slave a unique ip address!!
GATEWAY=192.168.8.20    #master and gateway
NETMASK=255.255.255.240
MTU=1500

#start up SLIP for freewave slave
ifPrep() {
  export IFNAME
  /sbin/slattach -P /var/run/$IFNAME.pid -lp slip -i slinit -c ipdown \
    -s 115200 /dev/freewave &
}

#try to ftp over the gateway's resolv.conf and hosts
hosts() {
  cat <<EOS 
$SLIPADDR $(hostname)-$IFNAME $(hostname)-slip
EOS
  ftpget $GATEWAY - /etc/hosts
}

resolv_conf() {
  ftpget $GATEWAY - /etc/resolv.conf
}
