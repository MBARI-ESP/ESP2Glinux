IFNAME=ppp8
AUTOSTART=no

provider=att  #works in USA with either AT&T or T-Mobile

ifPrep() {
  modprobe ppp_async && modprobe ppp_deflate &&
  ln -s ppp-$provider.pid /var/run/$IFNAME.pid &&
  pppd call $provider unit 8 logfile /dev/null
}

hosts() {    #add lines before EOS
  cat <<EOS 
$(netIfIP $IFNAME $(hostname)-$IFNAME $(hostname)-$provider)
EOS
}
