# one time local configuration
# since we're using devfsd, we need to fix up symlinks on every reboot
cd /dev
rm -f I2Cgate
[ -z "$I2Cgate" ] && {
  I2Cgate=ttyAM0
  [ -c tts/2 ] && I2Cgate=tts/2
}
ln -s $I2Cgate I2Cgate  #serial port that talks to the I2C gateway
chmod g+rw $I2Cgate
chgrp tty $I2Cgate
