# one time local configuration
# since we're using devfsd, we need to fix up symlinks on every reboot
cd /dev
rm -f I2Cgate
[ -z "$I2Cgate" ] && {
  I2Cgate=ttyAM0
#  [ -c tts/2 ] && I2Cgate=tts/2
}
ln -s $I2Cgate I2Cgate  #serial port that talks to the I2C gateway
chmod g+rw $I2Cgate
chgrp tty $I2Cgate

ln -s tts/15 freewave   #serial port connected to the freewave radio modem
stty -F freewave 19200 clocal raw -echo -echonl  #for modem configuration

#supprt for the ppp deamon
modprobe ppp_async && modprobe ppp_deflate
