home=`eval echo ~${SUDO_USER}`
export LTIB=$home/ltib
export DEV_IMAGE=$LTIB/rootfs
export TOOLCHAIN_PATH=/opt/freescale/usr/local/gcc-4.1.2-glibc-2.5-nptl-3/arm-none-linux-gnueabi
export LTIB_HOST=arm-none-linux-gnueabi
export TOOLCHAIN_PREFIX=${LTIB_HOST}-
