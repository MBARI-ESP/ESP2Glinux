export TOOLCHAIN=tc-fsl-x86lnx-armeabi-nptl-4.1.2-3.i386.rpm
export CCACHE_DIR=$home/.ccache
export KERNELDIR=$LTIB/rpm/BUILD/linux
PATH=$LTIB/bin:/opt/ltib/usr/spoof:/opt/ltib/usr/bin:$TOOLCHAIN_PATH/bin:$PATH
