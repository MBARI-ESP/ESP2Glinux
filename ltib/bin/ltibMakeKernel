#!/bin/sh
[ -z "$DEV_IMAGE" ] && . `dirname $(readlink -mn $0)`/ltibenv
cd $KERNELDIR && {
  case "$1" in
    *config)
      exec /usr/bin/make ARCH=arm "$@"
      ;;
    *)
      exec /usr/bin/make -j4 INSTALL_MOD_PATH=${INSTALL_MOD_PATH:-$DEV_IMAGE} \
        ARCH=arm  HOSTCC="/usr/bin/gcc -B/usr/bin/" KDIR=$KERNELDIR "$@"
  esac
}
