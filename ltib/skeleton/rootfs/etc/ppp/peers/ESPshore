file /etc/ppp/options.pptp

#for ESPshore.mbari.org
init "route del ESPshore 2>/dev/null;:"  #remove any preexisting host route to VPN server
pty  "exec pptp ESPshore --nolaunchpppd --idle-wait 180 --logstring ESPshore --loglevel 0"
#--debug

linkname ESPshore
remotename ESPshore
ipparam ESPshore
require-mppe-128

noauth
defaultroute
usepeerdns

persist
holdoff 30
maxfail 3
