IFNAME=wlan0
AUTOSTART=no
BOOTPROTO="dhcp-b -t15 -m600"  #in background
DHCPNAME=`hostname`-wifi
#VPN=$ESPshore/ppp6   #server IP / VPN interface

ifPrep() {
  iwconfig $IFNAME power off  #turn off power saving mode for reduced latency
  wpa_supplicant -Bi $IFNAME -P /var/run/wpa-$IFNAME.pid -c /etc/wpa_supplicant.conf
}

hosts() {    #add lines before EOS
  cat <<EOS
$(netIfIP $IFNAME $DHCPNAME)
EOS
}
