IFNAME=wlan0
AUTOSTART=no
BOOTPROTO="dhcp-b -t15 -m600 -s /usr/share/udhcpc/default.script"  #in background
DHCPNAME=`hostname`-wifi

ifPrep() {
  wpa_supplicant -Bi $IFNAME -P /var/run/wpa-$IFNAME.pid -c /etc/wpa_supplicant.conf
}

hosts() {    #add lines before EOS
  cat <<EOS
$(netIfIP $IFNAME $DHCPNAME)
EOS
}
