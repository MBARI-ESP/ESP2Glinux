#defaults to use if no network interface "ifg-$IFNAME" file exists
BOOTPROTO=dhcp-b  #dhcp in background
DHCPNAME=`hostname`

#VPN=$ESPshore/shore   #server IP / VPN interface

hosts() {
local name=$IFNAME
[ "$IFALIAS" ] && name=`basename $IFALIAS`
  cat <<EOS
$(netIfIP $IFNAME $DHCPNAME-$name)
EOS
}
