. $syscfg/if-default
IFALIAS=WiFi
IFNAME=wlan0
BOOTPROTO="dhcp-b -t15" #background after 15s

ifPrep() {
  wpa=wpa_supplicant
  iwconfig $IFNAME power off 2>/dev/null #disable power saving to reduced latency
  mkdir -p /var/run/$wpa
  $wpa -Bi $IFNAME -P /var/run/wpa-$IFNAME.pid -c /etc/$wpa.conf
}
