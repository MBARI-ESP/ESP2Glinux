#Configure WiFi interface as Access Point

BOOTPROTO=static
IPADDR=192.168.240.1
NETMASK=255.255.255.0

ifPrep() {
  #disable power saving to reduce latency
  iwconfig $IFNAME power off 2>/dev/null
  : ignore errors from iwconfig
}

ifDetach() {
  rm -f $run/wpa-$IFNAME.conf
}

ifPost() {
  ifDetach
  enableDHCP

  wpa=wpa_supplicant
  mkdir -p $run/$wpa
  runIF=$run/wpa-$IFNAME
  >$runIF.conf &&
  chmod og-rw $runIF.conf &&
  sed "s/ESPwifi/`hostname`/g" <$syscfg/AP/$wpa.conf >>$runIF.conf &&
  $wpa -Bi $IFNAME -P$runIF.pid -c$runIF.conf -e/var/tmp/wpa.rand
}

hosts() {
local name=$IFNAME
[ "$IFALIAS" ] && name=`basename $IFALIAS`
host=`hostname`
  cat <<EOS
$(netIfIP $IFNAME $host-$name $host.lan)
EOS
}
