IFNAME=ppp88  #USB serial modem
isp=attm2m  #specify hologram,verizon,usmobile,ting, or att (for t-mobile)
#VPN=$ESPshore/ppp6   #server IP / VPN interface
: ${modemTTY:=/dev/modem}

ifPrep() {  #specify ip address of vpn server/vpn iface name
  pppd call $isp unit ${IFNAME#ppp} $modemTTY${VPN:+" ipparam $VPN"}
}

hosts() {    #add lines before EOS
  cat <<EOS
$(netIfIP $IFNAME $(hostname)-$IFNAME $(hostname)-$isp)
$ESPshore ESPshore
EOS
}

pppDown() {
  ckpid=`cat /var/run/inadyn.pid 2>/dev/null` &&
    kill -CONT $ckpid
}
