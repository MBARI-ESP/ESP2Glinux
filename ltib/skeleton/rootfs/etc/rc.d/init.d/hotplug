# start handling hotplug devices
PATH=/usr/sbin:/sbin:/bin

case "$1" in
  start)
    if pidof udevd >/dev/null 2>&1; then
      echo "Handling hotplug events"
    else
      echo "Starting hotplug events dispatcher udevd"
      touch /var/lock/ifup.pending  #defer bringing up net interfaces
      udevd --daemon
    fi
    udevtrigger
    udevsettle --timeout=30
     ;;

  stop)
     :
     ;;

   *)
     echo "usage: local {start}"
esac
