# start handling hotplug devices
PATH=/usr/sbin:/sbin:/bin

case "$1" in
  start)
    pidof udevd >/dev/null 2>&1 || {
      echo "Starting hotplug events dispatcher udevd"
      udevd --daemon
    }
    echo "Handling initial hotplug events"
    udevtrigger
#    udevsettle --timeout=30  #needn't wait
     ;;

  stop)
     :
     ;;

   *)
       echo "usage: local {start}"
       ;;
esac
