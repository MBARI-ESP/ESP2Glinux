# initialize /dev symlinks on every reboot
PATH=/usr/sbin:/sbin:/bin

espPort()
{
  group=${3-esp}
  name=$1; port=$2
  [ -c "$port" ] &&
    chgrp $group $port && chmod g+rw $port &&
    ln -sf $port $name
}


case "$1" in
  start)
    cd /dev
    [ -e ppp ] || mknod ppp c 108 0

    # radio modem port should be owned by root user
    espPort modem ttyS8 root  #&&
#     stty -F freewave 19200 clocal raw -echo -echonl  #for modem configuration

#    espPort ctd      ttyS1   #Seabird CTD
#    espPort isus     ttyS2   #MBARI ISUS
    espPort I2Cgate  ttyS4   #core ESP gateway
    espPort AUVgate  ttyS5   #AUV command/status port
     ;;

  stop)
     :
     ;;

   *)
       echo "usage: local {start}"
       ;;
esac
