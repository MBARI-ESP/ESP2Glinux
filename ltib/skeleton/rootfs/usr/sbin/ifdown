#!/bin/sh
#
#  ifdown [interface name]
#

. /usr/share/ifdownfn.sh

case "$1" in
  -*|*/*|'') #any flag is a request for help
    cat <<END >&2
usage:  ifdown [network interface or alias name]
        deconfigure and disable the specified network interface or alias
END
    exit 1
  ;;
esac

ifDown "$@"
gateUp
hostsUp
